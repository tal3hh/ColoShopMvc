@model UserLoginDto
@using ServiceLayer.DTOs.Account
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Account/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Account/Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Account/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Account/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Account/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Account/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Account/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Account/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Account/Login/images/img-01.png" alt="IMG">
                </div>

                <form asp-action="Login" asp-controller="Account" method="post" class="login100-form validate-form">
                    <span class="login100-form-title">
                        Member Login
                    </span>
                    <div asp-validation-summary="All" class="text-danger">

                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" asp-for="Username" placeholder="Username">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Username" style="color:red"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" asp-for="Password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" asp-action="ForgotPassword" asp-controller="Account" asp-area="">
                            Email / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" asp-action="Index" asp-controller="Home">
                            <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                            Ana Sehifeye
                        </a>
                        |
                        <a class="txt2" asp-action="Register" asp-controller="Account">
                            Qeydiyyatdan kec
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>

                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Account/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Account/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Account/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Account/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Account/Login/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>
    <!--===============================================================================================-->
    <script src="~/Account/Login/js/main.js"></script>

</body>
</html>