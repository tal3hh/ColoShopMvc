        </div>
        <!-- page-body-wrapper ends -->


    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/AdminPanel/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/AdminPanel/node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/AdminPanel/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
