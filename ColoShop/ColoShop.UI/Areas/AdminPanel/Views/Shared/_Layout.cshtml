            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" asp-action="Index" asp-controller="Dashboard" asp-area="AdminPanel"><img src="~/AdminPanel/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" asp-action="Index" asp-controller="Dashboard" asp-area="AdminPanel"><img src="~/AdminPanel/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link nav-profile" id="profileDropdown" asp-action="Index" asp-controller="Home" asp-area="" data-toggle="dropdown" aria-expanded="false">
