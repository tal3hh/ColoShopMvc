                                <span class="menu-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ProductList" asp-controller="Product" asp-area="AdminPanel">
                                <span class="menu-title">Mehsullar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ProductDetailsList" asp-controller="ProductDetails" asp-area="AdminPanel">
                                <span class="menu-title">Mehsul Detaillari</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="BlogList" asp-controller="Blog" asp-area="AdminPanel">
                                <span class="menu-title">Blog</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ContactList" asp-controller="Contact" asp-area="AdminPanel">
                                <span class="menu-title">Contact</span>
                            </a>
                        </li>
                    </ul>
